<mvc:View controllerName="cie.repack.controller.repack" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
		<App id="repack">
			<pages>
				<Page id="page" title="{i18n>Repack}" showHeader="false">
				<subHeader>
					<Toolbar>
						<HBox width="100%">
							<VBox width="23%" justifyContent="Center">
								<Text text="{i18n>SerialNo}" textAlign="End" width="100%"/>
							</VBox>
			    			<VBox width="1%" justifyContent="Center"/>								
							<VBox width="62%">
								<Input id="serialNo" type="Text" change="onChangeSerial" 
									   value="{/repackSet/serialNo}">
								</Input>
							</VBox>	
			    			<VBox width="1%" justifyContent="Center"/>									
			    			<VBox width="10%">
								<Input id="boxNum" type="Text" editable="false"
									   value="{/repackSet/boxNum}">
								</Input>				    				
			    			</VBox>	
			    			<VBox width="3%" justifyContent="Center"/>					    			
						</HBox>							
					</Toolbar>							
				</subHeader>
					<content>
					<VBox class="tableBox">
						<Table id="table"
							inset="false"
							sticky="ColumnHeaders"
							growing="true"
							growingThreshold="10"
							items="{
								path: '/serialNumSet'
							}">
							<columns>
								<Column hAlign="Center" width="100%" popinDisplay="Inline">
									<Text text="{i18n>tableSerialNo}" />
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{SerialNumber}" wrapping="false" tooltip="{SerialNumber}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</VBox>											
					</content>
					<footer>
						<Bar>
							<contentLeft>
								<Button width="6rem" text="{i18n>Clear}" id="butClear" type="Reject" 
										icon="sap-icon://delete"
								        press="handleClear"/>
							</contentLeft>
							<contentRight>
								<Button width="7rem" text="{i18n>RepackButton}" id="butPost" type="Accept"
								        icon="sap-icon://sap-box"
								        press="handleRepack"/>
							</contentRight>
						</Bar>
					</footer>					
				</Page>
			</pages>
		</App>
</mvc:View>